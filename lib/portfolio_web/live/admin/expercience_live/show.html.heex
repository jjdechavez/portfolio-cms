<h1>Show Expercience</h1>

<%= if @live_action in [:edit] do %>
  <.modal return_to={Routes.admin_expercience_show_path(@socket, :show, @expercience)} title={@page_title}>
    <.live_component
      module={PortfolioWeb.Admin.ExpercienceLive.FormComponent}
      id={@expercience.id}
      title={@page_title}
      action={@live_action}
      expercience={@expercience}
      current_user={@current_user}
      return_to={Routes.admin_expercience_show_path(@socket, :show, @expercience)}
    />
  </.modal>
<% end %>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @expercience.name %>
  </li>

  <li>
    <strong>Start date:</strong>
    <%= @expercience.start_date %>
  </li>

  <li>
    <strong>End date:</strong>
    <%= if @expercience.current_work do %>
      Current
    <% else %>
      <%= @expercience.end_date %>
    <% end %>
  </li>

  <li>
    <strong>Active:</strong>
    <%= if @expercience.active do %>
      Active
    <% else %>
      Inactive
    <% end %>
  </li>

</ul>

<span><%= live_patch "Edit", to: Routes.admin_expercience_show_path(@socket, :edit, @expercience), class: "button" %></span> |
<span><%= live_redirect "Back", to: Routes.admin_expercience_index_path(@socket, :index) %></span>
